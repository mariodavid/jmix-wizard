<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://orderEdit.caption"
        focusComponent="form">
    <data>
        <instance id="orderDc"
                  class="de.diedavids.jmix.jwexample.entity.Order">
            <fetchPlan extends="_base">
                <property name="customer" fetchPlan="_base"/>
                <property name="deliveryAddress" fetchPlan="_base"/>
                <property name="invoiceAddress" fetchPlan="_base"/>
                <property name="orderLines" fetchPlan="_base">
                    <property name="product" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader/>
            <collection id="orderLinesDc" property="orderLines"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="orderDc">
            <column width="350px">
                <dateField id="orderDateField" property="orderDate"/>
                <entityPicker id="customerField" property="customer">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <entityPicker id="deliveryAddressField" property="deliveryAddress">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <entityPicker id="invoiceAddressField" property="invoiceAddress">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
            </column>
        </form>
        <groupBox id="orderLinesBox" caption="msg://de.diedavids.jmix.jwexample.entity/Order.orderLines">
            <table id="orderLinesTable" dataContainer="orderLinesDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="position"/>
                    <column id="amount"/>
                    <column id="amountUnit"/>
                    <column id="product"/>
                </columns>
                <buttonsPanel>
                    <button action="orderLinesTable.create"/>
                    <button action="orderLinesTable.edit"/>
                    <button action="orderLinesTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
